  "license": "(MIT AND CC-BY-4.0)",
  "scripts": {
    "dev": "next dev",
    "dev:inner": "next dev",
    "dev:watch": "node scripts/watch-and-restart.js",
    "clean": "node scripts/clean.js",
    "build": "next build",
    "start": "next start",
    "start:ci": "next start -p 3000",
    "check:dev": "node scripts/check-dev-deps.js",
    "prelint": "npm run check:dev",
    "lint": "eslint . --max-warnings=0",
    "pretypecheck": "npm run check:dev",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "a11y:ci": "pa11y-ci --config .pa11yci.json",
    "a11y": "pa11y http://localhost:3000 --reporter html > ./a11y/report.html",
    "pack:prod": "npm ci && npm run build && npm prune --production && tar -czf release.tar.gz .next public package.json package-lock.json node_modules",
    "debug:dump": "node scripts/dump-logs.js",
    "debug:clear": "node scripts/clear-logs.js",
    "test:smtp": "node scripts/test-smtp.js",
    "check:chunks": "node scripts/check-chunks.js",
    "check:headers": "node scripts/check-headers.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "framer-motion": "^12.29.2",
    "isomorphic-dompurify": "^2.35.0",
    "lucide-react": "^0.563.0",
    "next": "^14.2.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.13",
    "prismjs": "^1.30.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "swr": "^2.4.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "1.0.7",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.19.30",
    "@types/nodemailer": "^7.0.9",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "brace-expansion": "^1.1.12",
    "chokidar": "^5.0.0",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.4",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "husky": "^8.0.0",
    "pa11y": "9.0.1",
    "pa11y-ci": "4.0.1",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "tailwindcss": "3.4.19",
    "typescript": "^5.9.3",
    "vitest": "4.0.18",
    "axe-core": "4.11.1",
    "wait-on": "8.0.5"
